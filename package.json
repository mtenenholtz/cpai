{
  "name": "cpai",
  "version": "0.1.0",
  "type": "module",
  "description": "Use web-only models (e.g., GPT-5 Pro) with your local codebase: scan, pack to token limits, and copy a paste-ready bundle.",
  "bin": {
    "cpai": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli.ts --help",
    "start": "node dist/cli.js",
    "tui": "node dist/cli.js tui",
    "prepare": "pnpm run build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "check": "pnpm run lint && pnpm run format:check && pnpm run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "engines": {
    "node": ">=18.18"
  },
  "license": "MIT",
  "keywords": [
    "cli",
    "tokens",
    "llm",
    "copy",
    "tiktoken"
  ],
  "dependencies": {
    "@dqbd/tiktoken": "^1.0.22",
    "binary-extensions": "^2.3.0",
    "chalk": "^5.6.0",
    "clipboardy": "^4.0.0",
    "commander": "^12.1.0",
    "globby": "^14.1.0",
    "ink": "^5.2.1",
    "ink-text-input": "^6",
    "react": "^18"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^22.18.1",
    "@types/react": "^18",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^2.0.5"
  }
}
